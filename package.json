{
  "name": "chorus",
  "version": "0.1.0",
  "description": "Unified TUI for multi-agent development orchestration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "chorus": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.tsx",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --fix src",
    "format": "biome format --write src",
    "knip": "knip",
    "quality": "npm run test:run && npm run typecheck && npm run lint && npm run knip"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deligoez/chorus.git"
  },
  "keywords": [
    "cli",
    "tui",
    "ink",
    "agent",
    "orchestration"
  ],
  "author": "deligoez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deligoez/chorus/issues"
  },
  "homepage": "https://github.com/deligoez/chorus#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@xstate/react": "^6.0.0",
    "chokidar": "^5.0.0",
    "execa": "^9.6.1",
    "ink": "^6.6.0",
    "react": "^19.2.3",
    "xstate": "^5.25.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "fullscreen-ink": "^0.1.0",
    "ink-testing-library": "^4.0.0",
    "knip": "^5.80.2",
    "node-pty": "^1.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
