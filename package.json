{
  "name": "chorus",
  "version": "0.1.0",
  "description": "Unified TUI for multi-agent development orchestration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "chorus": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsc",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --fix src",
    "format": "biome format --write src",
    "check": "biome check src && tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deligoez/chorus.git"
  },
  "keywords": [
    "cli",
    "tui",
    "ink",
    "agent",
    "orchestration"
  ],
  "author": "deligoez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deligoez/chorus/issues"
  },
  "homepage": "https://github.com/deligoez/chorus#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "execa": "^9.6.1",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.3",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@vitest/ui": "^4.0.16",
    "fullscreen-ink": "^0.1.0",
    "ink-testing-library": "^4.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
